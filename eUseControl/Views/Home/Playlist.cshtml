@model List<eUseControl.Domain.Entities.Music.Playlists>

@{
     ViewBag.Title = "Playlist";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<body id="content">
     <div class="container">
          <div class="row">
               @foreach (var playlist in Model)
               {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                         <div class="card">
                              <div class="card-body cool-background-color">
                                   <h5 class="card-title">@playlist.Name</h5>
                                   <p class="card-text">@playlist.Description</p>
                                   <a href="@Url.Action("PlaylistDetails", "Home", new { id = playlist.PlaylistId })" class="btn btn-primary mt-2">View Music</a>
                              </div>
                         </div>
                    </div>
               }
          </div>
     </div>
</body>
